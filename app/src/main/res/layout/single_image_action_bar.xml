<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center_vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/SingleImageActionBar_textView_imageName"
        android:maxLines="1"
        android:text="2222"
        android:textSize="@dimen/action_bar_text_size"
        android:textColor="#000000"
        android:gravity="center_vertical"/>
    <ImageView
        android:layout_width="@dimen/action_bar_img_width"
        android:layout_height="@dimen/action_bar_img_height"
        android:src="@drawable/share_000000_128"
        android:scaleType="fitXY"
        android:background="@drawable/image_button_background"
        android:id="@+id/SingleImageActionBar_imageButton_share"/>
    <ImageView
        android:layout_width="@dimen/action_bar_img_width"
        android:layout_height="@dimen/action_bar_img_height"
        android:src="@drawable/favorite_disable_128"
        android:scaleType="fitXY"
        android:background="@drawable/image_button_background"
        android:id="@+id/SingleImageActionBar_imageButton_favorite"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="@dimen/action_bar_img_width"
        android:layout_height="@dimen/action_bar_img_height"
        android:src="@drawable/more_000000_128"
        android:scaleType="fitXY"
        android:background="@drawable/image_button_background"
        android:id="@+id/SingleImageActionBar_imageButton_menu"/>



</LinearLayout>